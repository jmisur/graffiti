<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/left_navigation_spray_screen"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/spray_button"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="130dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/spray_button" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/right_navigation_spray_screen"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/color_button"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_gravity="right"
            android:layout_marginRight="13px"
            android:layout_marginTop="25px"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/colour_button" />

        <ImageView
            android:id="@+id/stroke_button"
            android:scaleType="centerCrop"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_gravity="right"
            android:layout_marginRight="10px"
            android:layout_marginTop="35px"
            android:background="@null"
            android:src="@drawable/stroke_button" />
    </LinearLayout>

    <ImageView
        android:id="@+id/drawingImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</RelativeLayout>