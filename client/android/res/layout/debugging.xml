<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/left_navigation_spray_screen"
        android:orientation="vertical"
        android:padding="8dp" >

        <ImageButton
            android:id="@+id/spray_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/spray_button" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/right_navigation_spray_screen"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/color_button"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_gravity="right"
            android:layout_marginRight="15px"
            android:layout_marginTop="30px"
            android:background="@null"
            android:src="@drawable/colour_button" />

        <ImageButton
            android:id="@+id/stroke_button"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_gravity="right"
            android:layout_marginRight="15px"
            android:layout_marginTop="40px"
            android:background="@null"
            android:src="@drawable/stroke_button" />
    </LinearLayout>

    <ImageView
        android:id="@+id/drawingImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</RelativeLayout>